<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>loadHomePage</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/error</location>
    </error-page>
    <servlet>
        <servlet-name>PostController</servlet-name>
        <servlet-class>Controllers.PostController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>Controllers.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostManagerController</servlet-name>
        <servlet-class>Controllers.PostManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateDoctorController</servlet-name>
        <servlet-class>Controllers.CreateDoctor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateDoctorProfile</servlet-name>
        <servlet-class>Controllers.UpdateDoctorProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoctorListManage</servlet-name>
        <servlet-class>Controllers.DoctorListManage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoctorProfileDetailManage</servlet-name>
        <servlet-class>Controllers.DoctorProfileDetailManage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Error404Handler</servlet-name>
        <servlet-class>Controllers.Error404Handler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostController</servlet-name>
        <url-pattern>/manager/post/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostController</servlet-name>
        <url-pattern>/manager/post/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostController</servlet-name>
        <url-pattern>/manager/post/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>Controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPasswordController</servlet-name>
        <servlet-class>Controllers.ResetPasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserVerifyController</servlet-name>
        <servlet-class>Controllers.UserVerifyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePasswordController</servlet-name>
        <servlet-class>Controllers.ChangePasswordController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>loadHomePage</servlet-name>
        <servlet-class>Controllers.loadHomePage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loadAbout</servlet-name>
        <servlet-class>Controller.loadAbout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loadDoctor</servlet-name>
        <servlet-class>Controller.loadDoctor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loadHomePage</servlet-name>
        <url-pattern>/loadHomePage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loadAbout</servlet-name>
        <url-pattern>/loadAbout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loadDoctor</servlet-name>
        <url-pattern>/loadDoctor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostManagerController</servlet-name>
        <url-pattern>/manager/post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateDoctorController</servlet-name>
        <url-pattern>/manager/doctor/new</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateDoctorProfile</servlet-name>
        <url-pattern>/manager/doctor/profile/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoctorListManage</servlet-name>
        <url-pattern>/manager/doctor/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoctorProfileDetailManage</servlet-name>
        <url-pattern>/manager/doctor/profile/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPasswordController</servlet-name>
        <url-pattern>/ResetPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserVerifyController</servlet-name>
        <url-pattern>/UserVerify</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePasswordController</servlet-name>
        <url-pattern>/ChangePassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Error404Handler</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
